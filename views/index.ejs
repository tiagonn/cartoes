                    <td class="coluna" style="width: 100px"><strong>Nome:</strong></td>
                    <td class="coluna" colspan="3"><%= publicador.nome %></td>
                </tr>
                <tr class="linha">
                    <td class="coluna"><strong>Data de nascimento:</strong></td>
                    <td class="coluna" style="width: 190px"><%= publicador.dtNascimento %></td>
                    <td class="coluna" style="width: 110px"><strong>G&ecirc;nero</strong></td>
                    <td class="coluna"><%= publicador.genero %></td>
                </tr>
                <tr class="linha">
                    <td class="coluna"><strong>Data de batismo:</strong></td>
                    <td class="coluna"><%= publicador.dtBatismo %></td>
                    <td class="coluna"><strong>O.O ou Ungido:</strong></td>
                    <td class="coluna"><%= publicador.ooUngido %></td>
                </tr>
                <tr class="linha">
                    <td class="coluna"></td>
