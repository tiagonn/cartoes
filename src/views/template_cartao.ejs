<!DOCTYPE html>
<html>

<style>
    body {
        font-family: "Times New Roman", Times, serif;
        font-size: 12px;
    }

    div.divContainer {
        width: 540px;
    }

    div.unstyledTable {
        border: 1px solid #000000;
        width: 100%;
    }

    .divTable.unstyledTable .divTableCell,
    .divTable.unstyledTable .divTableHead {
        border: 1px solid #AAAAAA;
    }

    .divTable.unstyledTable .divTableBody .divTableCell {
        font-size: 10px;
    }

    .divTable.unstyledTable .divTableHeading .divTableHead {
        font-size: 11px;
        font-weight: bold;
    }

    /* DivTable.com */
    .divTable {
        display: table;
    }

    .divTableRow {
        display: table-row;
    }

    .divTableHeading {
        display: table-header-group;
    }

    .divTableCell,
    .divTableHead {
        display: table-cell;
        padding: 2px;
    }

    .divTableCellCenter {
        text-align: center;
    }

    .divTableHeading {
        display: table-header-group;
    }

    .divTableFoot {
        display: table-footer-group;
    }

    .divTableBody {
        display: table-row-group;
    }

    .divTableHead {
        text-align: center;
        vertical-align: middle;
    }

    .divTableHeadAno {
        width: 80px;
    }
    .divTableHeadOutros {
        width: 50px;
    }
    .divTableHeadObs {
        width: 210px;
    }

    table.cabecalho {
        border-collapse: collapse; 
        width: 100%;
    }
    tr.linha {
        height: 18px;
    }
    td.coluna {
        padding: 2px;
        font-size: 10px;
    }
</style>

<body>

    <div class="divContainer">
        <p style="text-align: center;"><strong>REGISTRO DE PUBLICADOR DE CONGREGA&Ccedil;&Atilde;O</strong></p>
        <table border="0" class="cabecalho">
            <tbody>
                <tr class="linha">
                    <td class="coluna" style="width: 85px"><strong>Nome:</strong></td>
                    <td class="coluna" style="width: 230px"><%= publicador['Nome Completo'] %></td>
                    <td class="coluna" style="width: 90px"><strong>G&ecirc;nero</strong></td>
                    <td class="coluna"><%= publicador['Gênero'] %></td>
                </tr>
                <tr class="linha">
                    <td class="coluna"><strong>Data de nascimento:</strong></td>
                    <td class="coluna"><%= publicador['Data de Nascimento'] %></td>
                    <td class="coluna"><strong>O.O ou Ungido:</strong></td>
                    <td class="coluna"><%= publicador['Ungido ou O.O'] %></td>
                </tr>
                <tr class="linha">
                    <td class="coluna"><strong>Data de batismo:</strong></td>
                    <td class="coluna"><%= publicador['Data de Batismo'] %></td>
                    <td class="coluna"><strong>Privil&eacute;gio de Servi&ccedil;o:</strong></td>
                    <td class="coluna"><%= publicador['Privilégio de Serviço'] %></td>
                </tr>
            </tbody>
        </table>

        <br/><br/>

        <div class="divTable unstyledTable">
            <div class="divTableHeading">
                <div class="divTableRow">
                    <div class="divTableHead divTableHeadAno">Ano de Serviço<br/><%= anoServicoFrente %></div>
                    <div class="divTableHead divTableHeadOutros">Publicações</div>
                    <div class="divTableHead divTableHeadOutros">Vídeos mostrados</div>
                    <div class="divTableHead divTableHeadOutros">Horas</div>
                    <div class="divTableHead divTableHeadOutros">Revisitas</div>
                    <div class="divTableHead divTableHeadOutros">Estudos bíblicos</div>
                    <div class="divTableHead divTableHeadObs">Observações</div>
                </div>
            </div>
            <div class="divTableBody">
                <% publicador.relatoriosAnoServicoFrente.forEach(item => { %>
                    <div class="divTableRow">
                        <div class="divTableCell"><%= item['Mês Extenso'] %></div>
                        <div class="divTableCell divTableCellCenter"><%= item['Publicações'] %></div>
                        <div class="divTableCell divTableCellCenter"><%= item['Vídeos'] %></div>
                        <div class="divTableCell divTableCellCenter"><%= item['Horas'] %></div>
                        <div class="divTableCell divTableCellCenter"><%= item['Revisitas'] %></div>
                        <div class="divTableCell divTableCellCenter"><%= item['Estudos Bíblicos'] %></div>
                        <div class="divTableCell"><%= item['Observação'] %></div>
                    </div>
                <% }); %>
            </div>
        </div>

        <br/><br/>

        <% if (publicador.relatoriosAnoServicoVerso !== undefined) { %>

            <div class="divTable unstyledTable">
                <div class="divTableHeading">
                    <div class="divTableRow">
                        <div class="divTableHead divTableHeadAno">Ano de Serviço<br/><%= anoServicoVerso %></div>
                        <div class="divTableHead divTableHeadOutros">Publicações</div>
                        <div class="divTableHead divTableHeadOutros">Vídeos mostrados</div>
                        <div class="divTableHead divTableHeadOutros">Horas</div>
                        <div class="divTableHead divTableHeadOutros">Revisitas</div>
                        <div class="divTableHead divTableHeadOutros">Estudos bíblicos</div>
                        <div class="divTableHead divTableHeadObs">Observações</div>
                    </div>
                </div>
                <div class="divTableBody">
                    <% publicador.relatoriosAnoServicoVerso.forEach(item => { %>
                        <div class="divTableRow">
                            <div class="divTableCell"><%= item['Mês Extenso'] %></div>
                            <div class="divTableCell divTableCellCenter"><%= item['Publicações'] %></div>
                            <div class="divTableCell divTableCellCenter"><%= item['Vídeos'] %></div>
                            <div class="divTableCell divTableCellCenter"><%= item['Horas'] %></div>
                            <div class="divTableCell divTableCellCenter"><%= item['Revisitas'] %></div>
                            <div class="divTableCell divTableCellCenter"><%= item['Estudos Bíblicos'] %></div>
                            <div class="divTableCell"><%= item['Observação'] %></div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } %>
    </div>
</body>

</html>